
@{
    ViewData["Title"] = "Cart";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<h1 style="text-align: center; margin-top: 50px;">Shopping cart</h1>
<div class="list-cart" style="margin-top: 50px">
    <table class="table" style="width: 1300px; color:whitesmoke;">
        <thead style="color: wheat; border-color: aliceblue;">
        <tr>
            <th>STT</th>
            <th>Title</th>
            <th>Description</th>
            <th>Image</th>
            <th>Quantity</th>
            <th>Price</th>
            <th>Total</th>
            <th>Action</th>
        </tr>
        </thead>
        <tbody>
        @{
            int STT = 0;
            foreach (var item in ViewBag.carts)
            {
                string txt_class = "quantity" +" "+ item.Book.Id;
                STT++;
                double total = item.Book.Price * item.Qty;
                //caloriesBurned = Convert.ToInt32(Decimal.Multiply(maleusage, textBoxInt));
                <tr>
                    <td>@STT</td>
                    <td>@item.Book.Title</td>
                    <td>
                    <p style="white-space: nowrap; width: 200px; overflow: hidden; text-overflow: ellipsis;">
                        @item.Book.Description
                    </p>  
                    </td>
                    <td>
                        <img src="@Url.Content("~/images/"+item.Book.BookFileName)" style="width: 220px; border-radius: 10px; height: 320px; margin-bottom: 10px;" />
                    </td>
                    <td><input type="number" class="@txt_class" value="@item.Qty" /></td>
                    <td>@item.Book.Price</td>
                    <td>@total</td>
                    <td>
                            <a class="btn btn-success" asp-controller="Home" asp-action="UpdateCart" asp-route-id="@item.Book.Id" data-id="@item.Book.Id" style="display:block;">
                        <button type="button" class="btn btn-success">
                            <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-pencil-square" viewBox="0 0 16 16">
                                <path d="M15.502 1.94a.5.5 0 0 1 0 .706L14.459 3.69l-2-2L13.502.646a.5.5 0 0 1 .707 0l1.293 1.293zm-1.75 2.456-2-2L4.939 9.21a.5.5 0 0 0-.121.196l-.805 2.414a.25.25 0 0 0 .316.316l2.414-.805a.5.5 0 0 0 .196-.12l6.813-6.814z" />
                                <path fill-rule="evenodd" d="M1 13.5A1.5 1.5 0 0 0 2.5 15h11a1.5 1.5 0 0 0 1.5-1.5v-6a.5.5 0 0 0-1 0v6a.5.5 0 0 1-.5.5h-11a.5.5 0 0 1-.5-.5v-11a.5.5 0 0 1 .5-.5H9a.5.5 0 0 0 0-1H2.5A1.5 1.5 0 0 0 1 2.5v11z" />
                            </svg>
                            Update
                        </button>
                    </a>
                    <br>
                    <a class="btn btn-danger" asp-controller="Home" asp-action="DeleteCart" asp-route-id="@item.Book.Id" style="display:block;">
                        <button type="button" class="btn btn-danger">
                            <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-trash-fill" viewBox="0 0 16 16">
                                <path d="M2.5 1a1 1 0 0 0-1 1v1a1 1 0 0 0 1 1H3v9a2 2 0 0 0 2 2h6a2 2 0 0 0 2-2V4h.5a1 1 0 0 0 1-1V2a1 1 0 0 0-1-1H10a1 1 0 0 0-1-1H7a1 1 0 0 0-1 1H2.5zm3 4a.5.5 0 0 1 .5.5v7a.5.5 0 0 1-1 0v-7a.5.5 0 0 1 .5-.5zM8 5a.5.5 0 0 1 .5.5v7a.5.5 0 0 1-1 0v-7A.5.5 0 0 1 8 5zm3 .5v7a.5.5 0 0 1-1 0v-7a.5.5 0 0 1 1 0z" />
                            </svg>
                            Delete
                        </button>
                    </a>
                    </td>
                </tr>
            }
        }
        </tbody>
    </table>
</div>



